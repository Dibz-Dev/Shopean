<!DOCTYPE html>

<div id="menu-wrapper" class="menu-wrapper">
    <div id="top" class="top"></div>
    <div id="bottom" class="bottom"></div>
</div>
<div class="drop-menu">
    <div class="menu-options">
        <p id="top-menu-clear">Clear List</p>
        <p id="create-item-modal">Create Item </p>
        <p><a href="/logout" class="param-logout"> Log out</a></p>
    </div>
</div>

<style>

    .menu-wrapper {
        position: fixed;
        top: 5%;
        right:5%;
        z-index: 5;
        cursor: pointer;
       
        
    }

    .drop-menu {

        position: relative;
        margin-top:65px;
        width:100%;
   }

    .menu-options {
        
        display: flex;
        position: fixed;
        margin-top: -135px;
        width:100%;
        justify-content: space-around;
        background-color: rgba(204, 231, 240, 0.959);
        transition: 0.5s;
      
       
    }

   .menu-options.active {
        display: flex;
        position: fixed;
        margin-top: 1px;
        background-color: rgba(204, 231, 240, 0.959);
        transition: 0.3s;
        height:55px;
        
       
       

   }

   .menu-options p {
      font-weight: 800;
      color: rgb(35, 161, 211);
      cursor: pointer;
     
    }
    .menu-options p:hover{
     
      transform: scale(1.2);
      font-weight: 800;
      
    }


    .top {
        height:2px;
        width:25px;
        background-color: red;
        border-radius: 5px;
        padding:2px;
        margin-right: 7px;
        transform: rotate(0deg);
        transition: 0.6s;
        
    }

   

    .bottom {
        height:2px;
        width:25px;
        background-color: red;
        border-radius: 5px;
        padding:2px;
        margin-right: 2px;
        margin-top: 5px;
        transform: rotate(0deg);
        transition: 0.6s;
    }

    .top.active {
    
      transform: rotate(50deg);
      transition: 0.3s;
}

    .bottom.active {
     
        transform: rotate(-50deg);
        margin-top: -6px;
        transition: 0.3s;
}

    p.param-create-item, a.param-logout {
        display: inline-block;
        color:red;
        text-align: center;
        text-decoration: none;
        
    }
   

</style>

